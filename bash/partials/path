PATH_DIRECTORIES=(
  '/usr/local/heroku/bin'
  '/usr/local/bin'
  "$HOME/.rbenv/bin"
  '/usr/bin'
  '/bin'
  '/usr/sbin'
  '/sbin'
  '/opt/X11/bin'
  '/usr/local/opt/qt5/bin'
  "$HOME/.dotfiles/bin"
  "$HOME/.nvm/versions/node/v7.10.0"
)

[[ -d ~/.dotfiles-local/bin ]] && PATH_DIRECTORIES+=("$HOME/.dotfiles-local/bin")

export PATH=$( IFS=:; echo "${PATH_DIRECTORIES[*]}" )
