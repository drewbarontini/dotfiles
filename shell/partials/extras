export DOCKER_DEFAULT_PLATFORM=linux/amd64

# -------------------------------------
#   Prompt Command
# -------------------------------------

export DISPATCHED=0
export PROMPT_COMMAND="${PROMPT_COMMAND:+$PROMPT_COMMAND} history -a; dispatch"

# -------------------------------------
#   Disable C-s
# -------------------------------------

stty -ixon
stty stop undef
