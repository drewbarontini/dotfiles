#!/usr/bin/env bash
# ****************************************************
#
#   Rails Project Setup
#   -> Sets up a Rails project
#
# ****************************************************

# ----------------------------------------------------
#   Bundler
# ----------------------------------------------------

bundle install

# ----------------------------------------------------
#   Database
# ----------------------------------------------------

cp config/database.example.yml config/database.yml
bundle exec rake db:create db:migrate db:seed

# ----------------------------------------------------
#   Pow
# ----------------------------------------------------

gem install powder
powder link
powder open
