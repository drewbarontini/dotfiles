#!/usr/bin/env bash
# ****************************************************
#
#   Bash Comment
#   -> Insert formatted bash comment strings
#
# ----------------------------------------------------
#   Usage
# ----------------------------------------------------
#
#  `bash-comment l 'Comment title'`
#  `bash-comment m 'Comment title'`
#  `bash-comment s 'Comment title'`
#
# ****************************************************

case "$1" in
  'l')
    echo "=============================================================="
    echo "==> $2"
    echo "=============================================================="
    ;;

  'm')
    echo "--------------------------------------------------------------"
    echo "--> $2"
    echo "--------------------------------------------------------------"
    ;;

  's')
    echo "--> $2"
    ;;
esac

