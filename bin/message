#!/usr/bin/env bash
# ****************************************************
#
#   Message
#   -> Output a styled message
#
# ----------------------------------------------------
#
#   Dependencies
#   - font
#
# ****************************************************

set -o errexit
set -o nounset
set -o pipefail

# ----------------------------------------------------
#   Main
# ----------------------------------------------------

echo "$( font $1 )$2$( font default )"
